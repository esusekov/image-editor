{
    "name": "ImageEditor",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "ImageEditor",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "page": "background.html"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/painting2.png"
        },
        "default_title": "ImageEditor",
        "default_popup": "popup.html"
    },

    "icons": {
        "128": "img/painting2.png"
    },
    "web_accessible_resources": [
        "img/*.png",
        "*.html",
        "js/*.js",
        "vendors/*"
    ],
    "permissions": [
        "tabs",
        "contextMenus",
        "downloads",
        "pageCapture",
        "storage",
        "<all_urls>",
        "*://*.mail.ru/*"
    ]
}
